{
  "devDependencies": {
    "@webpack-cli/generators": "^3.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "name": "notepad",
  "version": "1.0.0",
  "description": "A simple in-browser offline notepad",
  "main": "src/index.js",
  "scripts": {
    "build": "webpack build --mode=production ./src/index.js -o index.bundle.js",
    "start": "npx webpack serve --static-directory . --port 80 --allowed-hosts .repl.co",
    "watch": "webpack watch --mode=production ./src/index.js -o index.bundle.js",
    "test": "npx mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rowend36/notepad.git"
  },
  "keywords": [
    "notepad",
    "pwa",
    "editor"
  ],
  "author": "Rowend Duke",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rowend36/notepad/issues"
  },
  "homepage": "https://github.com/rowend36/notepad#readme",
  "dependencies": {
    "mithril": "^2.2.2"
  }
}
